<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="richardshen.carbon_tracker.menu"
    android:background="@drawable/mainedited">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/viewJourneysBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/journeypath"
            android:text="@string/view_journeys"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/viewUtilitiesBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/utilities"
            android:text="@string/view_utilities"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/viewTipHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="26dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/clock"
            android:text="@string/view_tips_history"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal|bold" />


        <Button
            android:id="@+id/viewHistoryBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/viewJourneysBtn"
            android:layout_alignStart="@+id/viewJourneysBtn"
            android:layout_below="@+id/viewJourneysBtn"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="26dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/pollution"
            android:text="@string/view_footprint"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal|bold" />


        <Button
            android:id="@+id/MAboutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00000000"
            android:backgroundTint="#00000000"
            android:drawableLeft="@drawable/info"
            android:text="@string/about2"
            android:textAlignment="textStart"
            android:textSize="35sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settingBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="26dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/setting30"
            android:text="@string/settings"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="normal|bold" />
    </LinearLayout>

</RelativeLayout>