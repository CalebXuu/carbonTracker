<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_car_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="richardshen.carbon_tracker.AddCarScreen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/addCarTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Car"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ACCarBrandText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car Brand:"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/ACBrandSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ACModelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_model"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/ACModelSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ACYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_year"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/ACYearSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ACInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filterPrompt" />

        <Button
            android:id="@+id/ACSearchCarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:drawableLeft="@drawable/search"
            android:text="@string/search_this_car"
            android:textAlignment="textStart"
            android:textSize="30sp" />

        <Button
            android:id="@+id/ACCancelBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="67dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:drawableLeft="@drawable/delete"
            android:text="@string/cancel"
            android:textAlignment="textStart"
            android:textSize="30sp" />

    </LinearLayout>

</RelativeLayout>